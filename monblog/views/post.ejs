<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
<body>
<%- include('layouts/navbar'); -%>
<!-- Page Header -->
<header class="masthead" >
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1><%= blogpost.title %></h1>
                    <h2 class="subheading"><%= blogpost.body %></h2>
                    <span class="meta">Posted
on <%= blogpost.datePosted.toLocaleDateString('fr-FR')
                        %></span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <%= blogpost.body %>
                <img src="<%= blogpost.image %>" class="img-fluid" alt="imagearticle blg" />
            </div>
        </div>
    </div>
</article>
<hr>
<%- include('layouts/footer'); -%>
<%- include('layouts/scripts'); -%>
</body>
</html>